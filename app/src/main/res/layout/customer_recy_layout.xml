<?xml version="1.0" encoding="utf-8"?>
<com.chauthai.swipereveallayout.SwipeRevealLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipelayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:dragEdge="right"
    app:mode="same_level"
>


    <!--Swipe Layout-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_SaveLatAndLong"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="#F39C12"
            android:gravity="center"
            android:text="บันทึกพิกัด"
            android:textSize="18sp"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/btn_GPS"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="#d269"
            android:gravity="center"
            android:text="นำทาง"
            android:textSize="18sp"
            android:textColor="#ffffff" />
        <TextView
            android:id="@+id/btn_Edit"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="#D35400"
            android:gravity="center"
            android:text="แก้ไข"
            android:textSize="18sp"
            android:textColor="#ffffff" />

        </LinearLayout>


        <!--Main Layout-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="20dp">

        <TextView
            android:id="@+id/tvCustomerID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="503840303016"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:ignore="Suspicious0dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvLatAndLong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="X"
                android:textSize="18sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/txt_SaleArea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvCustomerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="โรงเรียนตาขุนวิทยา"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvBillTO"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="94/1 ม.2 เขาวง อ.บ้านตาขุน จ.สุราษฎร์ธานี" />
        </LinearLayout>







    </LinearLayout>


</com.chauthai.swipereveallayout.SwipeRevealLayout>