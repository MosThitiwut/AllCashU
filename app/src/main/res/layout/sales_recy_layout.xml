<?xml version="1.0" encoding="utf-8"?>
<com.chauthai.swipereveallayout.SwipeRevealLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipelayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:dragEdge="right"
    app:mode="same_level">


    <!--Swipe Layout-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_Sales"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="#F52626"
            android:gravity="center"
            android:text="ขาย"
            android:textSize="18sp"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/btn_saveVisit"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="#29A241"
            android:gravity="center"
            android:text="บันทึก"
            android:textSize="18sp"
            android:textColor="#ffffff" />

    </LinearLayout>


    <!--Main Layout-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="20dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/size_mark"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:src="@mipmap/ic_size"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/star_mark"
                android:layout_marginTop="10dp"
                android:layout_width="47dp"
                android:layout_height="40dp"
                android:src="@mipmap/ic_startmark" />


        </LinearLayout>

       <LinearLayout
           android:layout_marginStart="10dp"
           android:orientation="vertical"
           android:layout_width="wrap_content"
           android:layout_height="match_parent">

           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">
               <TextView
                   android:id="@+id/txt_CustomerName"
                   android:text="พี่วรรณ"
                   android:textSize="30sp"
                   android:textStyle="bold"
                   android:layout_width="150dp"
                   android:layout_height="wrap_content"
                   android:maxLines="1"
                   android:ellipsize="end"
                   android:singleLine="true"/>
               <TextView
                   android:id="@+id/txt_Tel"
                   android:text="0951631214"
                   android:textSize="30sp"
                   android:textStyle="bold"
                   android:layout_marginStart="10dp"
                   android:layout_width="210dp"
                   android:layout_height="wrap_content"
                   android:maxLines="1"
                   android:ellipsize="end"
                   android:singleLine="true"/>
           </LinearLayout>

           <TextView
               android:layout_marginTop="5dp"
               android:id="@+id/txt_Address"
               android:text="52/69 ต.มะขามเตี้ย อ.เมือง จ.สุราษฎร์ธานี"
               android:textSize="20dp"
               android:maxLines="1"
               android:ellipsize="end"
               android:singleLine="true"
               android:layout_width="355dp"
               android:layout_height="wrap_content"/>

       </LinearLayout>

        <LinearLayout
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/rdo_Buy"
                    android:text=" ซื้อ"
                    android:textSize="28sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <RadioButton
                    android:id="@+id/rdo_NotBuy"
                    android:layout_marginTop="10dp"
                    android:text=" ไม่ซื้อ"
                    android:textSize="28sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <Spinner
                android:id="@+id/spinCause"
                android:layout_margin="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txt_SumBill"
                android:text="0"
                android:layout_margin="25dp"
                android:textSize="36sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>


</com.chauthai.swipereveallayout.SwipeRevealLayout>